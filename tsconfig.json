{
  "include": ["./src/**/*"],
  "exclude": ["./node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./src-cjs",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["es2015"],
    "target": "es2015",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": true
  }
}
